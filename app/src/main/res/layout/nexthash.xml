<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#116"
        android:id="@+id/tvNroHash"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/uyhhhFontColor"
        android:typeface="normal"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plaza de la bandera"
        android:id="@+id/tvLocation"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/uyhhhFontColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 de enero 2015"
        android:id="@+id/tvDate"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/uyhhhFontColor"/>

    <TextView
        android:id="@+id/item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Page:"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20hs"
        android:id="@+id/tvTime"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/uyhhhFontColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Half a meter man"
        android:id="@+id/tvHares"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/uyhhhFontColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/tvNumberDaysToGo"

            android:textSize="30sp"
            android:textColor="@color/uyhhhFontColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" days to go!"
            android:id="@+id/tvDaysToGo"

            android:textSize="20sp"
            android:textColor="@color/uyhhhFontColor"/>
    </LinearLayout>
</LinearLayout>