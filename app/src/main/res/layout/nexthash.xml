<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/imageHASH"
            android:src="@drawable/hash"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#116"
            android:id="@+id/tvNroHash"
            android:textSize="100sp"
            android:textStyle="bold"
            android:textColor="@color/uyhhhFontColor"
            android:typeface="normal"
            android:layout_marginRight="50sp"
            android:layout_margin="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
     >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
         >

            <ImageView
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:id="@+id/imageLocation"
                android:src="@drawable/ic_location_place"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plaza de la bandera"
                android:id="@+id/tvLocation"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/uyhhhFontColor"
                android:layout_marginLeft="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:id="@+id/imageDate"
                android:src="@drawable/ic_collections_go_to_today"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 de enero 2015"
                android:id="@+id/tvDate"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/uyhhhFontColor"
                android:layout_marginLeft="15sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:id="@+id/imageTime"
                android:src="@drawable/ic_device_access_alarms"

                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20hs"
                android:id="@+id/tvTime"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/uyhhhFontColor"
                android:layout_marginLeft="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:id="@+id/imageHare"
                android:src="@drawable/ic_social_cc_bcc"

                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Half a meter man"
                android:id="@+id/tvHares"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/uyhhhFontColor"
                android:layout_marginLeft="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Page:"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/tvNumberDaysToGo"

            android:textSize="50sp"
            android:textColor="@color/uyhhhFontColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" days to go!"
            android:id="@+id/tvDaysToGo"
            android:textSize="40sp"
            android:textColor="@color/uyhhhFontColor"

            />


    </LinearLayout>



</LinearLayout>