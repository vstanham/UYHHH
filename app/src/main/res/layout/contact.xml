<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followusContact"
        android:id="@+id/tvfollowusContact"
        android:layout_gravity="center_horizontal|left"
        android:textSize="40sp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagefb"
            android:src="@drawable/fblogo50dip"
            android:layout_marginRight="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageGooglePlus"
            android:src="@drawable/ic_g128"
            android:layout_marginRight="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagetw"
            android:src="@drawable/ic_twitter_logo_blue"/>

    </LinearLayout>

    <View
        android:layout_height="2dip"
        android:layout_width="300dp"
        android:background="@color/uyhhhLineSeparator"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageweb"
            android:src="@drawable/ic_web"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://uruguayhhh.wix.com/uyhhh"
            android:textSize="15dp"
            />



    </LinearLayout>




</LinearLayout>